{
    "name": "dali",
    "description": "Please enter a brief description here",
    "version": "0.0.1",
    "files": [
        "bin",
        "out",
        "src"
    ],
    "type": "module",
    "scripts": {
        "build": "tsc -b tsconfig.json && node esbuild.mjs",
        "watch": "concurrently -n tsc,esbuild -c blue,yellow \"tsc -b tsconfig.json --watch\" \"node esbuild.mjs --watch\"",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate",
        "langium:generate:production": "langium generate --mode=production",
        "langium:watch": "langium generate --watch",
        "vscode:prepublish": "npm run build && npm run lint",
        "build:web": "npm run build",
        "bundle": "vite build",
        "bundle:serve": "http-server ./dist --port 5175",
        "dev": "vite",
        "dev:debug": "vite --debug --force",
        "serve": "npm run dev"
    },
    "dependencies": {
        "@codingame/monaco-vscode-editor-service-override": "~3.2.3",
        "@codingame/monaco-vscode-keybindings-service-override": "~3.2.3",
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.0",
        "@mui/icons-material": "^6.3.1",
        "@mui/material": "^6.3.1",
        "@vitejs/plugin-react": "^4.3.4",
        "apexcharts": "^4.3.0",
        "chalk": "~5.3.0",
        "commander": "~11.0.0",
        "langium": "~3.3.0",
        "monaco-editor": "npm:@codingame/monaco-vscode-editor-api@~3.2.3",
        "monaco-editor-wrapper": "~4.0.2",
        "monaco-languageclient": "~8.1.1",
        "react": "^19.0.0",
        "react-apexcharts": "^1.7.0",
        "react-dom": "^19.0.0",
        "react-dropzone": "^14.3.5",
        "react-resizable-panels": "^2.1.7",
        "recoil": "^0.7.7",
        "vscode": "npm:@codingame/monaco-vscode-api@~3.2.3",
        "vscode-languageclient": "~9.0.1",
        "vscode-languageserver": "~9.0.1"
    },
    "devDependencies": {
        "@codingame/esbuild-import-meta-url-plugin": "~1.0.2",
        "@types/node": "^18.0.0",
        "@types/react": "^19.0.2",
        "@types/react-dom": "^19.0.2",
        "@types/vscode": "~1.67.0",
        "@typescript-eslint/eslint-plugin": "~7.3.1",
        "@typescript-eslint/parser": "~7.3.1",
        "concurrently": "~8.2.1",
        "esbuild": "~0.20.2",
        "eslint": "~8.57.0",
        "http-server": "~14.1.1",
        "langium-cli": "~3.3.0",
        "typescript": "~5.1.6",
        "vite": "~5.2.7"
    },
    "volta": {
        "node": "18.19.1",
        "npm": "10.2.4"
    },
    "displayName": "dali",
    "engines": {
        "vscode": "^1.67.0",
        "node": ">=18.0.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "dali-movie",
                "aliases": [
                    "Dali Movie",
                    "dali-movie"
                ],
                "extensions": [
                    ".dali"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "dali-movie",
                "scopeName": "source.dali-movie",
                "path": "syntaxes/dali-movie.tmLanguage.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:dali-movie"
    ],
    "main": "./out/extension/main.cjs",
    "bin": {
        "dali-movie-cli": "./bin/cli.js"
    }
}
